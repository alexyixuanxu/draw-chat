				msg.attr('class') = "msg";
				$("#other_msg").append(msg);
			}
		}

	});	
	*/

	
	</script>  

	<h1>Draw Chat!</h1>
	<img src="<%= avatar %>" class="avatar">
	<p id="username"><%= username %></p>

