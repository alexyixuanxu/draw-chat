		<div class="column" id="chat">
		</div>

		<div class="column">
			<div id="pen">
				<div id="pen_type">
					<p class="indicator">Pen Type</p>
				</div>
				<div id="pen_size">
					<p class="indicator">Pen Size</p>
				</div>
				<div id="pen_alpha">
					<p class="indicator">Alpha</p>
				</div>
